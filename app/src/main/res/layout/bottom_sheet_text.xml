<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp">

        <ImageButton
            android:id="@+id/btn_close_bottom_text"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:background="@drawable/button_black_trans"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/tv_note_date_bottom_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_close_bottom_menu"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:maxLines="1"
            android:text="Text Format"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:layout_gravity="left"
        android:maxLines="1"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_action_bold_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bold_title"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_bold" />

            <TextView
                android:id="@+id/tv_bold_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_italic_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_italic_title"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/ic_italic" />

            <TextView
                android:id="@+id/tv_note_italic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/italic"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_underline_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_underline_title"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_underlined" />

            <TextView
                android:id="@+id/tv_note_underline_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/underline"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_action_strik_title"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_strik_title"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_strikethrough" />

            <TextView
                android:id="@+id/tv_note_strik_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/strikethrough"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:layout_gravity="left"
        android:maxLines="1"
        android:text="Content"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_action_bold_content"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bold_content"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_bold" />

            <TextView
                android:id="@+id/tv_bold_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_italic_content"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_italic_content"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/ic_italic" />

            <TextView
                android:id="@+id/tv_note_italic_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/italic"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_underline_content"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_underline_content"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_underlined" />

            <TextView
                android:id="@+id/tv_note_underline_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/underline"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_action_strik_content"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_strik_content"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_strikethrough" />

            <TextView
                android:id="@+id/tv_note_strik_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/strikethrough"
                android:singleLine='true'
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_separate_notes_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:layout_gravity="left"
        android:maxLines="1"
        android:text="Text Alignment"
        android:textColor="@color/black"
        android:textSize="17sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_action_left"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_left_align"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_align_left" />

            <TextView
                android:id="@+id/tv_left_align"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/left"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_center"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_center_align"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="3dp"
                android:src="@drawable/ic_align_center" />

            <TextView
                android:id="@+id/tv_center_align"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/center"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_right"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/bg_note_item_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_right_align"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="4dp"
                android:src="@drawable/ic_align_right" />

            <TextView
                android:id="@+id/tv_right_align"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/right"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
