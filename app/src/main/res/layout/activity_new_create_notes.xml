<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activity.NewCreateNotesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color_bag">

        <LinearLayout
            android:id="@+id/RlBottomView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical|center_horizontal|center|start">

                <ImageView
                    android:id="@+id/IvDeleteNote"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IvCamera"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="5dp"
                    android:src="@drawable/ic_camera"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IvDrawing"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_pencil"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical|center_horizontal|center|end">

                <ImageView
                    android:id="@+id/IvEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="6dp"
                    android:src="@drawable/ic_create"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RlToolbarNotes"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/IvBackCreateNotes"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:foreground="?attr/actionBarItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_arrow" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/IvMoreCreateNotes"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:foreground="?attr/actionBarItemBackground"
                    android:padding="6dp"
                    android:src="@drawable/ic_more"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/TvDoneEditNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_text_button_home"
                    android:fontFamily="sans-serif-medium"
                    android:padding="8dp"
                    android:text="@string/done"
                    android:textColor="@color/app_icon_color"
                    android:textSize="@dimen/_16ssp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/TvFolderNameNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/IvBackCreateNotes"
                android:fontFamily="sans-serif-medium"
                android:text="All cloud"
                android:textColor="@color/app_icon_color"
                android:textSize="@dimen/_16ssp" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/SvNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/RlBottomView"
            android:layout_below="@+id/RlToolbarNotes">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp">

                <EditText
                    android:id="@+id/EdtCreateNoteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/title"
                    android:inputType="none|text|textCapSentences|textNoSuggestions"
                    android:lineSpacingExtra="6sp"
                    android:textColorHint="@color/title_color_hint"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/EdtCreateNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/EdtCreateNoteTitle"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="top|left|center_vertical|center_horizontal|center|start"
                    android:hint="@string/content"
                    android:inputType="none|text|textCapSentences|textMultiLine|textNoSuggestions"
                    android:lineSpacingExtra="5sp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/title_color_hint"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/RlAttachViewer"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/EdtCreateNote"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/IvAttach"
                        android:layout_width="250dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"
                        android:scaleType="center" />
                    <ImageButton
                        android:id="@+id/IvBtnRemoveAttach"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="6dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/button_black_trans"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_close"
                        app:tint="#ffffff" />


                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>